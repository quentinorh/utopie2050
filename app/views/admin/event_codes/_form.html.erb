<turbo-frame id="event_code_form">
  <%= form_with(model: [:admin, @event_code], class: "bg-white p-6 rounded-lg shadow-md") do |form| %>
    <div class="space-y-4">
      <div>
        <%= form.label :code, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :code, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>

      <div>
        <%= form.label :text, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :text, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>

      <div>
        <%= form.label :link, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :link, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>

      <div>
        <%= form.label :color, class: "block text-sm font-medium text-gray-700" %>
        <%= form.text_field :color, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm" %>
      </div>

      <div class="flex justify-end space-x-2">
        <%= form.submit class: "px-4 py-2 bg-blue-600 text-white rounded-md hover:bg-blue-700" %>
        <%= link_to "Annuler", admin_dashboard_path, class: "px-4 py-2 border border-gray-300 rounded-md hover:bg-gray-50", data: { turbo_frame: "event_code_form" } %>
      </div>
    </div>
  <% end %>
</turbo-frame>