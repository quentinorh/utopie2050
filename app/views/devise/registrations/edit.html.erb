<div class="bg-black-100 min-h-screen">
  <div class="pt-16 text-xl flex flex-col items-center w-full">
    <div class="bg-white p-sm rounded-lg shadow w-1/2 lg:w-1/3">
      <h2 class="text-center">Editer <%= resource_name.to_s.humanize %></h2>
        <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
          <%= f.error_notification %>

          <div class="form-inputs">
            <%= f.input :username, 
                        required: true, 
                        autofocus: true,
                        input_html: { class:'tw-form-input'},
                        label_html: { class:"tw-form-label mt-sm"}
            %>
            <%= f.input :email, 
                        required: true,
                        input_html: { class:'tw-form-input'},
                        label_html: { class:"tw-form-label mt-sm"}
            %>

            <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
              <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
            <% end %>

            <%= f.input :password,
                        hint: "leave it blank if you don't want to change it",
                        required: false,
                        input_html: { autocomplete: "new-password" },
                        input_html: { class:'tw-form-input'},
                        label_html: { class:"tw-form-label mt-sm"},
                        hint_html: { class: 'text-sm text-gray-400' } %>
            <%= f.input :password_confirmation,
                        required: false,
                        input_html: { autocomplete: "new-password" },
                        input_html: { class:'tw-form-input'},
                        label_html: { class:"tw-form-label mt-sm"},
                        hint_html: { class: 'text-sm text-gray-400' } %>
            <%= f.input :current_password,
                        hint: "we need your current password to confirm your changes",
                        required: true,
                        input_html: { autocomplete: "current-password" },
                        input_html: { class:'tw-form-input'},
                        label_html: { class:"tw-form-label mt-sm"},
                        hint_html: { class: 'text-sm text-gray-400' } %>
          </div>

          <div class="form-actions">
            <%= f.button :submit, "Mettre Ã  jour", class:"tw-btn-primary w-full" %>
          </div>
        <% end %>

        <div class="text-sm mt-sm text-center">Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class:"tw-btn-danger" %></div>
    </div>
  </div>
</div>



