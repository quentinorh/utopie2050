<div class="flex flex-col items-center justify-center w-full" style="min-height: calc(100dvh - 60px);">
  <div class="flex flex-col items-center w-full md:w-[600px] p-none p-sm md:p-base">
    <h2 class="text-xl uppercase text-center mb-sm">Renvoyer les instructions de confirmation</h2>

    <%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= f.error_notification %>
      <%= f.full_error :confirmation_token %>

      <div class="form-inputs">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    label: false,
                    placeholder: "Email",
                    value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
                    input_html: { class: 'tw-form-input' } %>
      </div>

      <div class="form-actions mt-sm">
        <%= f.button :submit, "Renvoyer les instructions", class: "tw-btn-primary w-full" %>
      </div>
    <% end %>

    <div class="mt-sm text-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
