<div class="h-[100vh] w-full relative">
    <div data-controller="hero-svg">
        <div data-hero-svg-target="container"></div>
    </div>
    
    <!-- Nouvelle div superposée avec fond translucide -->
    <div data-controller="hero-animation"
         class="absolute inset-0 flex flex-col items-center justify-center">
        <div class="w-full bg-white/80">
            <div class="flex flex-col justify-center container mx-auto p-4 md:p-12 lg:w-1/2">
                <h1 class="text-gray-600 text-xl md:text-xxl lg:text-display text-center" data-hero-animation-target="title">
                    Lire et écrire des futurs désirables
                </h1>
                <div>
                <div data-action="mousemove->hero-animation#handleMouseMove"></div>
                </div>
                <div class="flex gap-sm mt-sm justify-center" data-hero-animation-target="buttons">
                    <%= link_to "Lire les futurs", posts_path, class: "tw-btn-primary text-center max-sm:p-2", data: { controller: "randomize-letter-animation", "randomize-letter-animation-text-value": "Lire les futurs" } %>
                    <%= link_to "Écrire le futur", new_post_path, class: "tw-btn-secondary text-center max-sm:p-2", data: { controller: "randomize-letter-animation", "randomize-letter-animation-text-value": "Écrire le futur" } %>
                </div>
            </div>
        </div>
    </div>
</div> 