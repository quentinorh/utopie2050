<% if notice %>
  <div class="fixed bottom-4 right-4 z-50 flex items-center justify-between bg-white p-2 pr-4 rounded-md shadow-lg m-4" role="alert" data-flash-target="alert">
    <%= notice %>
    <button type="button" class="ml-4 text-gray-500 hover:text-gray-700 focus:outline-none" onclick="this.parentElement.remove()" aria-label="Close">
      <span class="text-2xl">&times;</span>
    </button>
  </div>
<% end %>
