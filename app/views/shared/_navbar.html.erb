<nav class="bg-white dark:bg-gray-800 border-b dark:text-gray-100 border-gray-200 dark:border-gray-600 sticky top-0 z-[99] h-navbar-height flex w-full items-center" data-controller="navbar fullscreen">
  <div class="flex justify-between w-full px-xs sm:px-sm">
    <div class="flex">
      <div class="flex flex-shrink-0 items-center gap-xs">
        <%= link_to root_path, class: "navbar-brand" do %>
          <h1>SP 2050</h1>
        <% end %>
        <span class="text-sm font-mono pb-[0.15em]">|</span>
        <%= link_to "Lire les futurs", posts_path, 
                    class: "text-sm font-mono",
                    data: { controller: "randomize-letter-animation", "randomize-letter-animation-text-value": "Lire les futurs", 
                    action: "mouseover->randomize-letter-animation#connect" } %>
      </div>
    </div>
    <div class="flex items-center flex-nowrap">
      <% if user_signed_in? %>
        <%= link_to 'Nouveau futur', new_post_path, 
                      class: "max-sm:hidden tw-btn-primary p-2 text-sm flex-shrink-0",
                    data: { controller: "randomize-letter-animation", "randomize-letter-animation-text-value": "Nouveau futur", 
                    action: "mouseover->randomize-letter-animation#connect" } %>
      <% else %>
        <div class="flex max-sm:hidden gap-2 flex-shrink-0">
          <%= link_to "Se connecter", new_user_session_path, class: "tw-btn-secondary p-2 text-sm" %>
          <%= link_to "Créer un compte", new_user_registration_path, class: "tw-btn-primary p-2 text-sm" %>
        </div>
        <div class="relative flex-shrink-0">
          <div class="flex sm:hidden pr-2">
            <button class="h-8 w-8 flex items-center justify-center border border-gray-300 text-gray-600 hover:border-primary hover:text-primary transition-colors duration-200 cursor-pointer" 
                 data-action="click->navbar#toogleSignin"
                 aria-label="Menu de connexion">
              <i class="fa fa-user text-xs"></i>
            </button>
          </div>
          <div class="tw-dropdown-menu text-center" data-navbar-target="menuSignin">
            <%= link_to "Se connecter", new_user_session_path, class: "tw-nav-link" %>
            <div class="border-t border-gray-100 my-1"></div>
            <%= link_to "Créer un compte", new_user_registration_path, class: "tw-nav-link" %>
          </div>
        </div>
      <% end %>
      <!-- Profile dropdown -->
      <% if user_signed_in? %>
        <div class="ml-4 flex-shrink-0">  
          <div class="relative">
            <div>
              <button class="h-8 w-8 relative flex items-center justify-center rounded-full bg-primary focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2 cursor-pointer" data-action="click->navbar#toogleMenu">
                <span class="absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 leading-none text-white text-[14px] font-medium" data-navbar-target="username">
                  <%= current_user.username[0].upcase %>
                </span>
                <span class="hidden absolute top-1/2 left-1/2 transform -translate-x-1/2 -translate-y-1/2 leading-none" data-navbar-target="closeMenu">
                  <i class="text-white fa fa-close text-[14px]"></i>
                </span>
              </button>
            </div>
            <div class="tw-dropdown-menu text-center" data-navbar-target="menuDesktop">
              <%= link_to 'Nouveau futur', new_post_path, 
                          class: "inline-block mt-1 sm:hidden tw-btn-primary p-2 text-sm",
                          data: { controller: "randomize-letter-animation", "randomize-letter-animation-text-value": "Nouveau futur", 
                          action: "mouseover->randomize-letter-animation#connect" } %>
              <div class="sm:hidden border-t border-gray-100 my-1"></div>

              <% if current_user&.admin? %>
                <%= link_to "Administration", admin_dashboard_path, class: "tw-nav-link" %>
              <% end %>
              <%= link_to "Mes futurs", user_posts_path, class: "tw-nav-link" %>
              <%= link_to "Mes favoris", user_favorites_path, class: "tw-nav-link" %>
              <%= link_to "Editer mon profil", edit_user_registration_path, class: "tw-nav-link" %>
              <div class="border-t border-gray-100 my-1"></div>
              <%= link_to "Se déconnecter", destroy_user_session_path, data: { turbo_method: :delete }, class: "tw-nav-link !text-gray-400 hover:!text-red-500" %>
            </div>
          </div>
        </div>
      <% end %>
      <!-- Fullscreen button -->
      <button type="button" 
              class="ml-3 sm:ml-4 flex-shrink-0 text-gray-400 dark:text-gray-300 hover:text-primary dark:hover:text-gray-100 focus:outline-none flex items-center justify-center transition-colors duration-200"
              data-action="click->fullscreen#toggle"
              aria-label="Basculer en mode plein écran">
        <span class="block flex items-center" data-fullscreen-target="enterIcon">
          <i class="fas fa-expand text-base"></i>
        </span>
        <span class="hidden flex items-center" data-fullscreen-target="exitIcon">
          <i class="fas fa-compress text-base"></i>
        </span>
      </button>     
    </div>
  </div>
</nav>
