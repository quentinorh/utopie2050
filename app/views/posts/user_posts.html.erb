<h2>Les futurs de <%= @user.username %></h2>
<div class="blankspace"></div>
<ul class="posts-list">
  <% @posts.each do |post| %>
    <li class="post-inline d-flex justify-content-between align-items-center">
      <div class="d-flex align-items-center">
        <h5 class="card-title">
          <%= link_to post.title, post, class: "card-title" %>
        </h5>
        <% if post.draft %>
          <div class="draft-icon">brouillon</div>
        <% end %>
      </div>
      <div class="post-inline-items">
        <%= link_to 'Edit', edit_post_path(post), class: "btn btn-secondary" %>
        <%= link_to 'Delete', post_path(post), data: { turbo_method: :delete }, class: "btn btn-danger" %>
      </div>
    </li>
  <% end %>
</ul>
