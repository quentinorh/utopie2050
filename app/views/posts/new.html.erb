<%= form_with(model: @post, local: true, html: { multipart: true }) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :body, class: "form-label" %>
    <%= form.text_area :body, class: "form-control" %>
  </div>

  <ul class="nav nav-tabs" id="imageTab" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" id="upload-tab" data-bs-toggle="tab" href="#upload" role="tab" aria-controls="upload" aria-selected="true">Upload Image</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" id="unsplash-tab" data-bs-toggle="tab" href="#unsplash" role="tab" aria-controls="unsplash" aria-selected="false">Unsplash</a>
    </li>
  </ul>

  <div class="tab-content" id="imageTabContent">
    <div class="tab-pane fade show active" id="upload" role="tabpanel" aria-labelledby="upload-tab">
      <div class="mb-3">
        <%= form.label :photo, "Upload Image", class: "form-label" %>
        <%= form.file_field :photo, class: "form-control" %>
        <div class="form-check">
          <%= form.check_box :image_rights, class: "form-check-input" %>
          <%= form.label :image_rights, "I certify that I have the rights to this image", class: "form-check-label" %>
        </div>
      </div>
    </div>
    <div class="tab-pane fade" id="unsplash" role="tabpanel" aria-labelledby="unsplash-tab" data-controller="unsplash">
      <div class="mb-3">
        <%= form.label :unsplash_image_url, "Search Unsplash", class: "form-label" %>
        <%= text_field_tag :query, nil, placeholder: "Search Unsplash", class: "form-control", data: { unsplash_target: "query" } %>
        <%= button_tag "Search", data: { action: "click->unsplash#search" }, type: :button, class: "btn btn-primary mt-2" %>
        <div data-unsplash-target="results" class="mt-3"></div>
        <%= form.hidden_field :unsplash_image_url, data: { unsplash_target: "hidden" } %>
      </div>
    </div>
  </div>

  <div class="mb-3" data-controller="color-picker">
    <%= form.label :color, "Select Color", class: "form-label" %>
    <div class="color-slider-wrapper">
      <input type="range" min="0" max="360" value="0" class="form-range" id="colorSlider" data-action="input->color-picker#updateColor" data-color-picker-target="colorSlider">
      <div class="color-bar"></div>
    </div>
    <%= form.hidden_field :color, id: "colorInput", value: "hsl(0, 70%, 80%)", data: { color_picker_target: "colorInput" } %>
  </div>

  <div class="actions">
    <%= form.submit "Create Post", class: "btn btn-primary" %>
  </div>
<% end %>
