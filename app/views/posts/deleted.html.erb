<% content_for :title, "SP 2050 - Archives" %>
<% content_for :description, "Accède à tes récits archivés sur SP 2050. Gère et restaure tes histoires précédemment supprimées." %>
<% content_for :meta_robots, "noindex, nofollow" %>

<div class="flex flex-col items-center justify-center min-h-screen bg-gray-100 dark:bg-gray-900 p-4">
  <div class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8 max-w-md w-full text-center">
    <i class="fa-solid fa-check-circle text-green-500 text-5xl mb-4"></i>
    <h1 class="text-2xl font-bold text-gray-800 dark:text-gray-100 mb-4">Futur supprimé avec succès</h1>
    
    <%= link_to new_post_path, class: "inline-block bg-primary text-white px-6 py-3 rounded-lg hover:bg-primary-dark transition-colors duration-200" do %>
      <i class="fa-solid fa-pen-to-square mr-2"></i>
      Écrire un nouveau futur
    <% end %>
    
    <%= link_to posts_path, class: "inline-block mt-4 text-gray-600 dark:text-gray-400 hover:text-gray-800 dark:hover:text-gray-200" do %>
      <i class="fa-solid fa-arrow-left mr-2"></i>
      Retour à la liste des futurs
    <% end %>
  </div>
</div> 