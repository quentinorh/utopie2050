<% if @post.photo.present? %>
  <%
    if @post.color
      match = @post.color.match(/hsl\((\d+), (\d+)%, (\d+)%\)/)
      hue = match[1].to_i
      saturation = match[2].to_i
      lightness = match[3].to_i
      rgb_values = hsl_to_rgb(hue, saturation, lightness)
    else
      rgb_values = [0, 0, 0] # default RGB values if no color is found
    end
  %>
<% end %>
  <!-- Duotone filter -->
  <svg xmlns="http://www.w3.org/2000/svg" version="1.1" class="hidden">
  <filter id="duotone">
    <feColorMatrix type="matrix" values="0.33 0.33 0.33 0 0
                                         0.33 0.33 0.33 0 0
                                         0.33 0.33 0.33 0 0
                                         0    0    0    1 0" result="grayImage"/>
    <feComponentTransfer>
      <feFuncR type="linear" slope="1" intercept="<%= rgb_values[0] / 255.0 %>"/>
      <feFuncG type="linear" slope="1" intercept="<%= rgb_values[1] / 255.0 %>"/>
      <feFuncB type="linear" slope="1" intercept="<%= rgb_values[2] / 255.0 %>"/>
    </feComponentTransfer>
  </filter>
</svg>


<div data-controller="scroll text-to-speech">
  <nav class="bg-white fixed bottom-0 w-full z-[99] border-t border-gray-100 font-mono text-sm uppercase leading-[100%]">
    <div class="p-sm">
      <div class="flex justify-between">
        <div class="flex gap-xs">
          <button data-action="click->text-to-speech#speak" class="flex gap-xs items-center"><span>  <%= inline_svg_tag('play.svg') %></span>Lecture audio</button>
          <span data-action="click->text-to-speech#stop" class="hidden">Stop la description audio</span>
          <span>|</span>
          <span><%= @post.calculate_spoken_time %></span>
        </div>
        <div class="flex gap-sm">
          <span class="tw-overtitre">Lecture <%= @post.calculate_reading_time %></span>
          <span class="text-gray-500"><span data-scroll-target="scrollPercentage">00</span>%</span>
        </div>
      </div>
    </div>
  </nav>

  <div class="flex flex-col lg:flex-row gap-sm lg:gap-xl min-h-screen">
    <!-- Colonne de gauche fixe -->
    <div class="relative w-full lg:w-1/3 lg:sticky h-[100vw] aspect-square lg:top-[theme('top.navbar-height')] max-h-screen flex flex-col items-center justify-center z-0 ">
      <div class="absolute top-0 left-0 z-[99]">
        <h1 class="text-display text-black-900 p-sm opacity-0" data-scroll-target="title" data-color-attribute="<%= @post.color %>"> <%= @post.title %></h1>
        <div class="relative p-sm">
          <span class="text-2xl" style="background-color: <%= @post.color %>">Peyo du 34</span>
          <p class="bg-black-900 text-white inline-block p-2 transform -rotate-90 origin-top-left"><%= @post.created_at.strftime("%d.%m.%Y") %></p>
        </div>
        <div class="flex gap-2 p-sm">
          <% if user_signed_in? && current_user == @post.user %>
            <%= link_to 'Edit', edit_post_path(@post), class: "btn btn-secondary" %>
            <%= link_to 'Delete', post_path(@post), data: { turbo_method: :delete }, class: "btn btn-danger" %>
          <% end %>
        </div>
      </div>
      <div class="w-full h-full mb-4 relative origin-left" data-scroll-target="postImage">
        <div class="absolute top-0 left-0 w-full h-full" style="background-image: url('<%= cl_image_path @post.photo.key, crop: :fill %>'); background-size: cover; background-position: center; filter: url(#duotone);">
        </div>
      </div>
    </div>

    <!-- Colonne de droite défilante -->
    <div class="w-full lg:w-2/3 overflow-y-auto p-sm lg:p-0 lg:pr-sm">
      <div class="flex justify-between font-mono text-sm pt-sm uppercase">
        <div>
          <p>Publié le</p>
          <p data-controller="randomize-letter-animation"><%= @post.created_at.strftime("%d.%m.%Y") %></p>
        </div>
        <div>
          <p>Lecture moyenne</p>
          <p class="text-right"><%= @post.calculate_reading_time %></p>
        </div>
      </div>
      <div class="tw-content text-xl pt-0 lg:pt-[50vh] opacity-0 transition-opacity duration-1000" data-scroll-target="content" data-text-to-speech-target="content">
        <%= simple_format(@post.body) %>
      </div>
    </div>
  </div>
</div>

