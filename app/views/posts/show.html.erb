<h1><%= @post.title %></h1>
<p><%= @post.body %></p>
<% if @post.photo? %>
  <%= image_tag @post.photo.url %>
<% end %>
<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %> |

<%= form_with model: @post, method: :delete, data: { turbo_confirm: "Are you sure?" } do %>
  <%= submit_tag 'Delete', class: 'btn btn-danger' %>
<% end %>
