<%= form_with(model: @post, local: true, html: { multipart: true }) do |form| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> erreurs ont empêché ce post d'être sauvegardé :</h2>
      <ul>
        <% @post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-4">
    <h4>Titre</h4>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-4">
    <h4>Texte</h4>
    <%= form.text_area :body, class: "form-control text-area" %>
  </div>

  <div class="mb-4">
    <h4>Illustration</h4>
    <ul class="nav nav-tabs" id="imageTab" role="tablist">
      <li class="nav-item" role="presentation">
        <a class="nav-link active" id="upload-tab" data-bs-toggle="tab" href="#upload" role="tab" aria-controls="upload" aria-selected="true">Charger une image</a>
      </li>
      <li class="nav-item" role="presentation">
        <a class="nav-link" id="unsplash-tab" data-bs-toggle="tab" href="#unsplash" role="tab" aria-controls="unsplash" aria-selected="false">Unsplash</a>
      </li>
    </ul>
    <div class="tab-content" id="imageTabContent">
      <div class="tab-pane fade show active" id="upload" role="tabpanel" aria-labelledby="upload-tab">
        <div>
          <%= form.file_field :photo, class: "form-control" %>
          <div class="form-check">
            <%= form.check_box :image_rights, class: "form-check-input" %>
            <%= form.label :image_rights, "Je certifie avoir les droits sur cette image", class: "form-check-label" %>
          </div>
        </div>
      </div>
      <div class="tab-pane fade" id="unsplash" role="tabpanel" aria-labelledby="unsplash-tab" data-controller="unsplash">
        <div>
          <div class="d-flex">
            <%= text_field_tag :query, nil, placeholder: "Recherche Unsplash", class: "form-control", data: { unsplash_target: "query" } %>
            <%= button_tag "Chercher", data: { action: "click->unsplash#search" }, type: :button, class: "btn btn-primary mt-2" %>
          </div>
          <div data-unsplash-target="results" class="mt-3"></div>
          <%= form.hidden_field :unsplash_image_url, data: { unsplash_target: "hidden" } %>
        </div>
      </div>
    </div>
  </div>

  <div class="mb-4">
    <h4>Couleur</h4>
    <div class="mb-3" data-controller="color-picker">
      <%= form.label :color, "Sélectionner une couleur", class: "form-label" %>
      <div class="color-slider-wrapper">
        <input type="range" min="0" max="360" value="0" class="form-range" id="colorSlider" data-action="input->color-picker#updateColor" data-color-picker-target="colorSlider">
        <div class="color-bar"></div>
      </div>
      <%= form.hidden_field :color, id: "colorInput", value: "hsl(0, 70%, 80%)", data: { color_picker_target: "colorInput" } %>
    </div>
  </div>

  <div class="mb-3">
    <h4>Brouillon ?</h4>
    <%= form.check_box :draft, class: "form-check-input" %>
    <%= form.label :draft, "Marquer comme brouillon", class: "form-check-label" %>
  </div>

  <div class="actions">
    <% if @post.new_record? %>
      <%= form.submit "Créer le futur", class: "btn btn-primary" %>
    <% else %>
      <%= form.submit "Éditer le futur", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
