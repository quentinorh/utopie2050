<% unique_id = @post.persisted? ? @post.id : SecureRandom.uuid %>
<div data-controller="chapter preview test"
     data-preview-username-value="<%= current_user.username %>"
     data-preview-initial-hue-value="<%= @post.pattern_settings.try(:[], 'hue') || rand(360) %>"
     data-test-unique-id-value="<%= unique_id %>"
     class="w-full">
  <%= form_with(model: @post, local: true, html: { multipart: true, class: "flex flex-col min-h-screen", data: { action: "submit->test#saveSVG submit->test#savePatternSettings" } }) do |form| %>

    <!-- Affichage des erreurs -->
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "erreur") %> erreurs ont empêché ce post d'être sauvegardé :</h2>
        <ul>
          <% @post.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>
    <div class="grid grid-cols-1 xl:grid-cols-7 min-h-screen">
      <!-- Colonne de gauche (paramètres et aperçu) -->
      <div class="xl:col-span-3">
        <div class="p-sm bg-gray-700 shadow w-full min-h-full">
          <div class="flex gap-sm sm:flex-nowrap flex-wrap flex-col">
            <!-- Aperçu -->
            <div class="flex flex-col items-center justify-center max-sm:w-full">
              <!-- Pattern Container -->
              <div class="relative sm:h-[370px] sm:w-[calc(370px*250/350)] w-full h-full">
                <div class="absolute top-0 left-0">
                  <div class="px-xs py-[5px] mt-[-1px] text-l z-99 text-black w-4/5" data-test-target="titleWrapper">
                  </div>
                  <div class="px-xs py-[5px] mt-[6px] text-sm z-99 w-fit text-black" data-test-target="userName">
                    <%= current_user.username %>
                  </div>
                </div>
                <svg data-coversize-target="svg" shape-rendering="auto" viewBox="0 0 250 350" preserveAspectRatio="xMidYMid meet">
                  <defs>
                    <radialGradient id="gradient1-<%= unique_id %>" cx="50%" cy="50%" r="50%">
                      <stop offset="0%"/>
                      <stop offset="100%"/>
                    </radialGradient>
                    <radialGradient id="gradient2-<%= unique_id %>" cx="50%" cy="50%" r="50%">
                      <stop offset="0%"/>
                      <stop offset="100%"/>
                    </radialGradient>
                    <radialGradient id="gradient3-<%= unique_id %>" cx="50%" cy="50%" r="50%">
                      <stop offset="0%"/>
                      <stop offset="100%"/>
                    </radialGradient>
                  </defs>
                  <g data-test-target="curveGroup"></g>
                </svg>
              </div>
            </div>
            <!-- Paramètres de la couverture-->
            <div class="flex-grow min-w-0">
              <div class="flex justify-between items-center">
                <button type="button" class="tw-btn-primary text-sm py-1 px-2" data-action="click->test#randomize">Aléatoire</button>            
              </div>
              <div class="mt-xs">
                <!-- Controls -->
                <div class="mt-4 text-l text-white"> 
                  <div class="hidden">
                    <label class="text-sm font-mono" for="sliderX">Contrôle 1:</label>
                    <input type="range" 
                      data-test-target="firstSliderControl" 
                      data-action="input->test#updateCurve"
                      min="0" max="100" value="50" 
                      class="h-2 w-full cursor-ew-resize appearance-none rounded-full bg-primary disabled:cursor-not-allowed"
                    >
                  </div>

                  <!-- Joysticks -->
                  <div class="flex gap-sm justify-center">
                    <div>
                      <div class="flex flex-col gap-sm text-sm font-mono mt-1 mb-2">
                        <label>
                          <input type="radio" name="symmetryMode" value="x4" data-test-target="symmetryMode" data-action="change->test#updateCurve">
                          <span class="align-middle">x4</span>
                        </label>
                        <label>
                          <input type="radio" name="symmetryMode" value="x8" data-test-target="symmetryMode" data-action="change->test#updateCurve">
                          <span class="align-middle">x8</span>
                        </label>
                        <label>
                          <input type="radio" name="symmetryMode" value="x16" data-test-target="symmetryMode" data-action="change->test#updateCurve">
                          <span class="align-middle">x16</span>
                        </label>
                      </div>
                    </div>

                    <div>
                      <label class="text-sm font-mono hidden" for="colorPicker">Couleur:</label>
                      <input 
                        class="h-[64px] w-2 cursor-ns-resize appearance-none rounded-full bg-primary disabled:cursor-not-allowed [-webkit-appearance:slider-vertical] [writing-mode:bt-lr]"
                        type="range"
                        id="hue"
                        data-test-target="colorPicker"
                        data-action="input->test#updateColors input->test#updateTitle input->test#updateCurve"
                        min="0"
                        max="360"
                        value="280"
                        style="background: linear-gradient(to bottom, 
                          hsl(0, 80%, 70%), 
                          hsl(60, 80%, 70%), 
                          hsl(120, 80%, 70%), 
                          hsl(180, 80%, 70%), 
                          hsl(240, 80%, 70%), 
                          hsl(300, 80%, 70%), 
                          hsl(360, 80%, 70%));"
                      >
                    </div>

                    <div class="">
                      <div class="relative w-16 h-16 border border-black-500" data-pattern-grid=1>
                        <div class="absolute inset-0 grid grid-cols-6 grid-rows-6 divide-black-500/50" data-test-target="grid">
                          <% 36.times do |i| %>
                            <span class="border-r border-t border-black-500/50"></span>
                          <% end %>
                        </div>
                        
                        <!-- Center circle -->
                        <div data-test-target="anchor" data-action="mousedown->test#startDrag mousemove->test#drag mouseup->test#stopDrag" class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-4 h-4 bg-white rounded-full"></div>
                      </div>
                    </div>

                    <div class="">
                      <div class="relative w-16 h-16 border border-black-500" data-pattern-grid=2>
                        <div class="absolute inset-0 grid grid-cols-6 grid-rows-6 divide-black-500/50" data-test-target="grid">
                          <% 36.times do |i| %>
                            <span class="border-r border-t border-black-500/50"></span>
                          <% end %>
                        </div>
                        
                        <!-- Center circle -->
                        <div data-test-target="anchor" data-action="mousedown->test#startDrag mousemove->test#drag mouseup->test#stopDrag" class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-4 h-4 bg-white rounded-full"></div>
                      </div>
                    </div>

                    <div class="h-[64px]">
                      <input 
                        type="range" 
                        data-test-target="smoothing" 
                        data-action="input->test#updateCurve"
                        min="10" 
                        max="100" 
                        value="50" 
                        class="h-full w-2 cursor-ns-resize appearance-none rounded-full bg-primary disabled:cursor-not-allowed [writing-mode:bt-lr] [-webkit-appearance:slider-vertical]"
                      >
                    </div>

                  </div>
                  <div class="hidden">
                    <label class="text-sm font-mono" for="sliderX3">Contrôle 2:</label>
                    <input type="range" 
                      data-test-target="secondSliderControl" 
                      data-action="input->test#updateCurve"
                      min="0" max="100" value="50" 
                      class="h-2 w-full cursor-ew-resize appearance-none rounded-full bg-primary disabled:cursor-not-allowed"
                    >
                  </div>
                  <div class="hidden">
                    <label class="text-sm font-mono" for="rows">Nombre de lignes:</label>
                    <input 
                      type="range" 
                      data-test-target="rows" 
                      data-action="input->test#updateCurve"
                      min="1" 
                      max="5" 
                      value="1" 
                      class="h-2 w-full cursor-ew-resize appearance-none rounded-full bg-primary disabled:cursor-not-allowed"
                    >
                  </div>
                  <div class="hidden">
                    <label class="text-sm font-mono" for="columns">Nombre de colonnes:</label>
                    <input 
                      type="range" 
                      data-test-target="columns" 
                      data-action="input->test#updateCurve"
                      min="1" 
                      max="5" 
                      value="1" 
                      class="h-2 w-full cursor-ew-resize appearance-none rounded-full bg-primary disabled:cursor-not-allowed"
                    >
                  </div>
                  
                  <%= form.hidden_field :pattern_settings, data: { test_target: "patternSettings" } %>
                  <%= form.hidden_field :cover, data: { test_target: "cover" } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Colonne de droite (contenu) -->
      <div class="p-base pt-base bg-white shadow w-full xl:col-span-4">
        <div class="flex items-center justify-between gap-sm">
          <span class="text-sm font-mono text-gray-500 block mb-sm">COUV_N°95,0.05,0.795,0.035</span>
          <% if !@post.new_record? %>
            <span class="text-sm font-mono text-gray-500 block mb-sm">Crée le <%= @post.created_at.strftime("%d/%m/%Y") %></span>
          <% end %>
        </div>
        <!-- Titre -->
        <%= form.text_field :title, 
                          class: "tw-form-input text-2l pb-xs border-b border-gray-300 ring-0 ring-transparent ring-offset-0 p-0 rounded-none text-black-900", 
                          placeholder: "Futur titre", 
                          value: @post.title, 
                          required: true, 
                          autofocus: true,
                            data: { action: "input->test#updateTitle", test_target: "titleInput" } %>
        <p class="text-red-500 text-sm mt-1 hidden" data-preview-target="titleError">Le titre est requis</p>
        
        <div class="flex justify-between items-center mt-sm">
          <div class="flex gap-sm items-center w-full">
            <div class="grow mr-base">
              <label class="text-base tw-form-label">Code événement</label>
              <p class="text-xs text-gray-600 pb-2">Si ce futur fait partie d'un événement, indique le code ici</p>
  
            <%= form.text_field :event_code,
                value: @post.event_code&.code,
                class: "tw-form-input text-sm",
                placeholder: "optionnel"%>
            </div>
            <div class="flex items-center gap-xs">
              <span class="text-sm text-nowrap">Enregistrer comme brouillon</span>
              <button type="button" class="relative inline-flex h-6 w-11 shrink-0 cursor-pointer rounded-full border-2 border-transparent bg-gray-200 transition-colors duration-200 ease-in-out focus:outline-none focus:ring-2 focus:ring-indigo-600 focus:ring-offset-2" role="switch" aria-checked="false">
                <span class="sr-only">Publier comme brouillon</span>
                <!-- Enabled: "translate-x-5", Not Enabled: "translate-x-0" -->
                <span aria-hidden="true" class="pointer-events-none inline-block size-5 translate-x-0 transform rounded-full bg-white shadow ring-0 transition duration-200 ease-in-out"></span>
              </button>
              <div class="flex items-center gap-2">
                <%= form.check_box :draft, class: "tw-form-checkbox" %>
                <%= form.label :draft, "brouillon", class: "tw-form-label" %>
              </div>
            </div>
            <% if @post.new_record? %>
              <%= form.submit "Publier le futur", class: "tw-btn-primary w-fit", data: { action: "click->preview#validateForm" } %>
            <% else %>
              <%= form.submit "Éditer le futur", class: "tw-btn-primary w-fit", data: { action: "click->preview#validateForm" } %>
            <% end %>
          </div>
        </div>
        <!-- Texte -->
        <%= form.text_area :body, class: "tw-form-input mt-sm p-sm", rows: 10, placeholder: "Écris ton futur ici..." %>

        <!-- Chapitres -->
        <div class="mt-6">
          <div class="flex items-center justify-end">
            <%= button_tag "Ajouter un chapitre", type: :button, class: "tw-btn-secondary", data: { action: "click->chapter#addChapter" } %>
          </div>
          <div id="chapters" data-chapter-target="chapters">
            <%= form.fields_for :chapters do |chapter_form| %>
              <div class="chapter-fields text-sm mt-xs" data-chapter-target="chapter">
                <div class="hidden" data-chapter-target="chapterIndex">
                  <%= chapter_form.options[:child_index] %>
                </div>
                <label class="tw-form-label">Titre du chapitre</label>
                <%= chapter_form.text_field :title, class: "tw-form-input" %>

                <label class="tw-form-label mt-2">Texte du chapitre</label>
                <%= chapter_form.text_area :body, class: "tw-form-input", rows: 5 %>

                <%= chapter_form.hidden_field :position %>
                <%= chapter_form.hidden_field :_destroy %>

                <%= link_to "Supprimer ce chapitre", "#", class: "tw-btn-secondary inline-block mt-2 mb-6", data: { action: "click->chapter#removeChapter" } %>
              </div>
            <% end %>
          </div>
          
        </div>
      </div>
    </div>
  <% end %>
</div>
